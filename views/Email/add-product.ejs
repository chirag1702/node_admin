<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Form Elements <%-
contentFor('breadcrumb') %>
<div class="col-sm-6">
  <div class="page-title-box">
    <h4 class="font-size-18">Add Products</h4>
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item">
        <a href="javascript: void(0);">Veltrix</a>
      </li>
      <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
      <li class="breadcrumb-item active"></li>
    </ol>
  </div>
</div>

<%- contentFor('body') %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Add Products</h4>

        <div class="form-group row">
          <label for="product-name" class="col-sm-2 col-form-label"
            >Product Name</label
          >
          <div class="col-sm-10">
            <input
              class="form-control"
              type="text"
              placeholder="Product Name"
              id="product-name"
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="product-type" class="col-sm-2 col-form-label"
            >Type</label
          >
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-primary active">
              <input type="radio" name="packet" id="packet_btn" checked /> Packet
            </label>
            <label class="btn btn-primary">
              <input type="radio" name="loose" id="loose_btn" /> Loose
            </label>
          </div>
        </div>
        <hr>
        <div class="form-group-row">
          <div class="form-group row">
            <label for="measurment" class="col-sm-2 col-form-label"
              >Measurment</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Measurment"
                id="measurment"
              />
            </div>
          </div>
          <div class="form-group row">
            <label for="measurment-unit" class="col-sm-2 col-form-label"
              >Unit</label
            >
            <div class="col-sm-10">
              <select class="form-control">
                  <option>Kg</option>
                  <option>Gm</option>
                  <option>Ltr</option>
                  <option>Ml</option>
                  <option>Pack</option>
                  <option>Pc.</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label for="price" class="col-sm-2 col-form-label"
          >Price</label>
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Price"
                id="price"
              />
            </div>
          </div>
          <div class="form-group row">
            <label for="discount-price" class="col-sm-2 col-form-label"
              >Discount Price</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Discount Price"
                id="discount-price"
              />
            </div>
          </div>
          <div class="form-group row">
            <label for="stock" class="col-sm-2 col-form-label"
              >Stock</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="number"
                placeholder="Stock"
                id="stock"
              />
            </div>
          </div>
          <div class="form-group row">
              <label for="stock-unit" class="col-sm-2 col-form-label"
                >Unit</label
              >
              <div class="col-sm-10">
                <select class="form-control">
                    <option>Kg</option>
                    <option>Gm</option>
                    <option>Ltr</option>
                    <option>Ml</option>
                    <option>Pack</option>
                    <option>Pc.</option>
                </select>
              </div>
            </div>
  
            <div class="form-group row">
              <label for="availability" class="col-sm-2 col-form-label"
                >Availability</label
              >
              <div class="col-sm-10">
                <select class="form-control">
                    <option>Available</option>
                    <option>Sold Out</option>
                </select>
              </div>
            </div>
          <hr>
        </div>
        <form action="/add-product" method="POST">
          <button
          type="button"
          class="btn btn-primary waves-effect waves-light"
          id="sa-success"
        >
          Add Product
        </button>
        </form>

      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

