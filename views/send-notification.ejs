<%- contentFor('body') %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4>Send Notification</h4>
        <hr>
        <form action="/send-message" method="POST">
          <div class="form-group row">
            <label for="type" class="col-sm-2 col-form-label">Type :</label>
            <div class="col-sm-10">
              <select class="form-control" name="type">
                <option>category</option>
                <option>product</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label">Title :</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" placeholder="Enter title" name="title" />
            </div>
          </div>
          <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label">Message</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="5" name="message" placeholder="Enter your message"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label for="image" class="col-sm-2 col-form-label">Choose Image (optional) : </label>
            <div class="col-sm-10">
              <input type="file" class="filestyle" data-input="false" name="image" />
            </div>
          </div>
          <hr>
          <button type="submit" class="btn btn-primary waves-effect waves-light" name="btn-add-delivery-boy"> Send
          </button>
        </form>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>

