  <div class="page-title-box">
    <h4 class="font-size-18">Email Read</h4>
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item">
        <a href="javascript: void(0);">Veltrix</a>
      </li>
      <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
      <li class="breadcrumb-item active">Email Read</li>
    </ol>
  </div>
</div>

<%- contentFor('body') %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4>Manage Customer Wallet</h4>
        <hr>
        <div class="form-group row">
          <label for="customer" class="col-sm-2 col-form-label"
            >Customer</label
          >
          <div class="col-sm-10">
            <input
              class="form-control"
              type="text"
              placeholder="Customer"
              id="customer"
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="type" class="col-sm-2 col-form-label"
            >Select Type</label
          >
          <div class="col-sm-10">
            <select class="form-control">
              <option>credit</option>
              <option>debit</option>
            </select>
          </div>
        </div>
        <div class="form-group row">
          <label for="message" class="col-sm-2 col-form-label"
            >Message</label
          >
          <div class="col-sm-10">
            <textarea class="form-control" rows="5"></textarea>
          </div>
        </div>
        <hr>
        <form action="/add-wallet" method="POST">
          <button
            type="submit"
            class="btn btn-primary waves-effect waves-light"
            id="btn-update-wallet"
          > Add </button>
        </form>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

