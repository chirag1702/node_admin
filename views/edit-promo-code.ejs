<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Form Elements <%-
contentFor('breadcrumb') %>
<link href="public/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
<link href="public/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
<link href="public/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<link href="public/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />


<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Add Products</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Veltrix</a>
            </li>
            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
            <li class="breadcrumb-item active"></li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Promo Code</h4>
                <hr>

                <% if (data != null) { %>



                <form action="/update-promo-code?<%= data.id %>" method="POST">
                    <div class="form-group row">
                        <label for="promo-code" class="col-sm-2 col-form-label">Promo Code</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.promo_code %> name="promocode" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="message" class="col-sm-2 col-form-label">Message</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.message %> name="message" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="startdate" class="col-sm-2 col-form-label">Start Date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value=<%= data.start_date %> name="startdate" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="enddate" class="col-sm-2 col-form-label">End Date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value=<%= data.end_date %> name="enddate" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="noofusers" class="col-sm-2 col-form-label">No. of users</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.no_of_users %> name="noofusers" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="minorderamt" class="col-sm-2 col-form-label">Minimum order amount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.minimum_order_amount %>
                                name="minorderamt" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="discount" class="col-sm-2 col-form-label">Discount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.discount %> name="discount" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="discounttype" class="col-sm-2 col-form-label">Discount Type</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="discounttype">
                                <option selected><%= data.discount_type %></option>
                                <option><%= data.discount_type == "Percentage" ? "Amount" : "Percentage" %></option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="max-discount" class="col-sm-2 col-form-label">Max. Discount Amount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value=<%= data.max_discount_amount %>
                                name="maxdiscount" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="repeat" class="col-sm-2 col-form-label">Repeate Usage</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="repeat">
                                <option selected><%= data.repeat_usage == 1 ? "Allowed" : "Not Allowed" %></option>
                                <option><%= data.repeat_usage == 1 ? "Not Allowed" : "Allowed" %></option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="status" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="status">
                                <option selected><%= data.status == 1 ? "Active" : "Deactive" %></option>
                                <option><%= data.status == 1 ? "Deactive" : "Active" %></option>
                            </select>
                        </div>
                    </div>
                    <hr>

                    <button type="submit" class="btn btn-primary waves-effect wavws-light" name="updatepromobtn"> Update
                    </button>
                </form>
                <% } %>
            </div>
        </div>
    </div>
</div>
<!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

