<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Manage Delivery Boys <%-
contentFor('breadcrumb') %>

<link href="../../../public/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
<link href="../../../public/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
<link href="../../../public/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<link href="../../../public/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4>Add Delivery Boy</h4>
                <hr>
                <form action="/add-delivery-boy" method="POST">
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Name" name="name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mobile" class="col-sm-2 col-form-label">Mobile</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Mobile" name="mobile" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="password" name="password" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="confirmpassword" class="col-sm-2 col-form-label">Confirm Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="password" name="confirmpassword" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-sm-2 col-form-label">Adddress</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" name="address"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="bonus" class="col-sm-2 col-form-label">Bonus (%)</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="bonus" />
                        </div>
                    </div>
                    <hr>

                    <button type="submit" class="btn btn-primary waves-effect waves-light" name="btn-add-delivery-boy">
                        Add </button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4>Manage Delivery Boy</h4>
                <hr>
                <% if (data != null) { %>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th data-priority="1">ID</th>
                            <th data-priority="3">Name</th>
                            <th data-priority="1">Mobile</th>
                            <th data-priority="3">Address</th>
                            <th data-priority="3">Bonus</th>
                            <th data-priority="6">Balance</th>
                            <th data-priority="6">Status</th>
                            <th data-priority="6">Action</th>
                        </tr>
                    </thead>

                    <% data.forEach(result => { %>


                    <tbody>
                        <tr>
                            <td><%= result.id %></td>
                            <td><%= result.name %></td>
                            <td><%= result.mobile %></td>
                            <td><%= result.address %></td>
                            <td><%= result.bonus %></td>
                            <td><%= result.balance %></td>
                            <td><%= result.status %></td>
                            <td><a href="/delete-delivery-boy?id=<%= result.id %>" onclick="return confirm('Are you sure ?');">Delete</a></td>
                        </tr>
                    </tbody>

                    <% }); %>

                </table>

                <% } %>
            </div>
        </div>

    </div>
    <!-- end col -->
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

