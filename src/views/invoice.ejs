<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Invoice <%-
contentFor('breadcrumb') %>
<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Invoice</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Veltrix</a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Extra Pages</a>
            </li>
            <li class="breadcrumb-item active">Invoice</li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <% if (data != null) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="invoice-title">
                                <h4 class="float-right font-size-16">
                                    <strong>Order # <%= data.order.id %></strong>
                                </h4>
                                <h3 class="mt-0">
                                    <img src="../../public/images/logo-sm.png" alt="logo" height="24"/>
                                </h3>
                            </div>
                            <hr/>
                            <div class="row">
                                <div class="col-6">
                                    <address>
                                        <strong>Billed To:</strong><br/>
                                        <%= data.user.name %><br/>
                                        <%= data.order.address %>
                                    </address>
                                </div>
                                <div class="col-6 text-right">
                                    <address>
                                        <strong>Shipped To:</strong><br/>
                                        <%= data.order.address %>
                                    </address>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mt-4">
                                    <address>
                                        <strong>Payment Method:</strong><br/>
                                        <%= data.order.payment_method %><br/>
                                        <%= data.order.email %>
                                    </address>
                                </div>
                                <div class="col-6 mt-4 text-right">
                                    <address>
                                        <strong>Order Date:</strong><br/>
                                        <%= data.order.date_added %><br/><br/>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div>
                                <div class="p-2">
                                    <h3 class="font-size-16"><strong>Order summary</strong></h3>
                                </div>
                                <div class="">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <td><strong>Item</strong></td>
                                                <td class="text-center"><strong>Price</strong></td>
                                                <td class="text-center"><strong>Quantity</strong></td>
                                                <td class="text-right"><strong>Totals</strong></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                            <% data.items.forEach(result2 => { %>


                                                <tr>
                                                    <td><%= result2.name %></td>
                                                    <td class="text-center">&#x20b9 <%= result2.discounted_price %></td>
                                                    <td class="text-center"><%= result2.quantity %></td>
                                                    <td class="text-right">&#x20b9 <%= result2.discounted_price * result2.quantity %></td>
                                                </tr>
                                            <% }); %>

                                            <tr>
                                                <td class="thick-line"></td>
                                                <td class="thick-line"></td>
                                                <td class="thick-line text-center">
                                                    <strong>Subtotal</strong>
                                                </td>
                                                <td class="thick-line text-right">
                                                    &#x20b9 <%= data.order.total %></td>
                                            </tr>

                                            <tr>
                                                <td class="thick-line"></td>
                                                <td class="thick-line"></td>
                                                <td class="thick-line text-center">
                                                    <strong>Tax</strong>
                                                </td>
                                                <td class="thick-line text-right">
                                                    &#x20b9 <%= data.order.tax_amount %></td>
                                            </tr>

                                            <tr>
                                                <td class="no-line"></td>
                                                <td class="no-line"></td>
                                                <td class="no-line text-center">
                                                    <strong>Delivery Charge</strong>
                                                </td>
                                                <td class="no-line text-right">&#x20b9 <%= data.order.delivery_charge %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="no-line"></td>
                                                <td class="no-line"></td>
                                                <td class="no-line text-center">
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="no-line text-right">
                                                    <h4 class="m-0">&#x20b9 <%= data.order.final_total %></h4>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="d-print-none">
                                        <div class="float-right">
                                            <a href="javascript:window.print()"
                                               class="btn btn-success waves-effect waves-light"><i
                                                        class="fa fa-print"></i></a>
                                            <a href="#" class="btn btn-primary waves-effect waves-light">Send</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                <% } %>
            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>
