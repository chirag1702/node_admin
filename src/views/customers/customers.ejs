<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Email Read <%-
contentFor('breadcrumb') %>

<!-- Responsive Table css -->
<link href="../../../public/libs/admin-resources/rwd-table/rwd-table.min.css" rel="stylesheet" type="text/css" />

<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Email Read</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Veltrix</a>
            </li>
            <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
            <li class="breadcrumb-item active">Email Read</li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <% if (data != null) { %>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th data-priority="1">ID</th>
                            <th data-priority="3">Name</th>
                            <th data-priority="1">Email</th>
                            <th data-priority="3">M.No.</th>
                            <th data-priority="3">Balance</th>
                            <th data-priority="6">Refferal Code</th>
                            <th data-priority="6">Friend's Code</th>
                            <th data-priority="6">Street</th>
                            <th data-priority="6">City</th>
                            <th data-priority="6">Status</th>
                            <th data-priority="6">Date & Time</th>
                        </tr>
                    </thead>

                    <% data.forEach(result => { %>


                    <tbody>
                        <tr>
                            <td><%= result.id %></td>
                            <td><%= result.name %></td>
                            <td><%= result.email %></td>
                            <td><%= result.mobile %></td>
                            <td><%= result.balance %></td>
                            <td><%= result.refferal_code %></td>
                            <td><%= result.friends_code %></td>
                            <td><%= result.street %></td>
                            <td><%= result.city %></td>
                            <td><% if (result.status == 1) { %> <span
                                class="badge badge-pill badge-success">Active</span>
                            <% } else if (result.status == 0) { %> <span
                                class="badge badge-pill badge-danger">Inactive</span> <% } %> </td>
                            <td><%= result.created_at %></td>
                        </tr>
                    </tbody>

                    <% }); %>

                </table>

                <% } %>



            </div>
        </div>
    </div>
    <!-- end col -->
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

<script src="../../../public/libs/sweetalert2/sweetalert2.min.js"></script>

<script src="../../../public/js/pages/sweet-alerts.init.js"></script>

<!-- Responsive Table js -->
<script src="../../../public/libs/admin-resources/rwd-table/rwd-table.min.js"></script>

<!-- Init js -->
<script src="../../../public/js/pages/table-responsive.init.js"></script>
