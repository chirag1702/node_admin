<%- contentFor('title') %> New Offer Images <%- contentFor('breadcrumb') %>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4>Add New Offers Images here</h4>
                <hr>
                <form action="/upload-offer-image" method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="image" class="col-sm-2 col-form-label">Offer Image</label>
                        <div class="col-sm-10">
                            <input type="file" class="filestyle" data-input="true" name="image">
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary waves-effect waves-light" id="btn-upload-offer-image">
                        Upload </button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4>Add New Offers Images here</h4>
                <hr>
                <% if (data != null) { %>

                <table class="table table-hover mb-0">

                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Date Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(result => { %>

                        <tr>
                            <td><img src="<%= result.image %>"></td>
                            <td><%= result.date_added %></td>
                            <td><a href="/delete-offer-image?id=<%= result.id %>" onclick="return confirm('Are you sure ?');">Delete</a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <% } %>
            </div>
        </div>

    </div>
</div>

