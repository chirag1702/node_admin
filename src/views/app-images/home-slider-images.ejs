<%- contentFor('title') %> New Offer Images <%- contentFor('breadcrumb') %>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4>Add / Update Exciting Offers Images here</h4>
                <hr>
                <form action="/upload-slider-image" method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="type" class="col-sm-2 col-form-label">Type</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="type">
                                <option>Default</option>
                                <option>Category</option>
                                <option>Product</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="sliderimage" class="col-sm-2 col-form-label">Slider Image : (Recomended size : 1024
                            X
                            512 pixels</label>
                        <div class="col-sm-10">
                            <input type="file" class="filestyle" name="sliderimage">
                        </div>
                    </div>

                    <hr>


                    <button type="submit" class="btn btn-primary waves-effect waves-light" id="btn-upload-slider-image">
                        Upload </button>
                </form>

            </div>
        </div>
        <div class="card">
            <div class="card-body">

                <% if (data != null) { %>


                <table class="table table-hover mb-0">

                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(result => { %>

                        <tr>
                            <td><%= result.type %></td>
                            <td><img src=<%= result.image %>></td>
                            <td><a href="/delete-slider-image?id=<%= result.id %>" onclick="return confirm('Are you sure ?');">Delete</a></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <% } %>
            </div>
        </div>
    </div>

    <%- contentFor('FooterJs') %>

