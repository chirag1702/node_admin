<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Add Products</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Veltrix</a>
            </li>
            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
            <li class="breadcrumb-item active"></li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Tax</h4>
                <% if (data != null) { %>
                <form action="/update-tax?id=<%= data.id %>" method="POST">
                    <div class="form-group row">
                        <label for="taxname" class="col-sm-2 col-form-label">Tax Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="taxname" value=<%= data.title %> />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="percentage" class="col-sm-2 col-form-label">Percentage</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="percentage" value=<%= data.percentage %> />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="taxname" class="col-sm-2 col-form-label">Tax Name</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="status">
                                <option><%= data.status == 1 ? "Active" : "Deactive"%></option>
                                <option><%= data.status == 1 ? "Deactive" : "Active" %></option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                </form>
                <% } %>
            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

