<%- contentFor('HeaderCss') %>

<%- contentFor('title') %> Basic Table

<%- contentFor('breadcrumb') %>
<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Basic Tables</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="javascript: void(0);">Veltrix</a></li>
            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
            <li class="breadcrumb-item active">Basic Tables</li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Units</h4>
                <form action="/add-unit" method="POST">
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Unit Name</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="code" class="col-sm-2 col-form-label">Short Code</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="code" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light" id="sa-button">Add
                        Unit</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Units</h4>
                <% if (data != null) { %>
                <table class="table table-hover mb-0">

                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(result => { %>
                        <tr>
                            <td><%= result.name %></td>
                            <td><%= result.short_code %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } %>
            </div>
        </div>
    </div>
</div>





